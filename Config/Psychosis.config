<--- File = robjam1990/Psychosis/Config/Psychosis.config --->
<?xml version="1.0" encoding="utf-8"?>
<configuration>
<projectDescription>
	<name>Psychosis</name>
	<comment></comment>
	<projects>
	</projects>
	<buildSpec>
		<buildCommand>
			<name>org.eclipse.jdt.core.javabuilder</name>
			<arguments>
			</arguments>
		</buildCommand>
	</buildSpec>
	<natures>
		<nature>org.eclipse.jdt.core.javanature</nature>
	</natures>
</projectDescription>
  <!-- System Settings -->
  <system>
    <!-- Codedom Settings -->
    <codedom>
      <compilers>
        <!-- C# Compiler -->
        <compiler language="c#;cs;csharp" extension=".cs" warningLevel="4" 
                  type="Microsoft.CSharp.CSharpCodeProvider, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089">
          <providerOption name="CompilerVersion" value="v4.0"/>
          <providerOption name="WarnAsError" value="false"/>
        </compiler>
      </compilers>
    </codedom>
  </system>

  <!-- Game Settings -->
  <game>
    <!-- Combat System -->
    <combat>
      <limbRemovalSystem enabled="true" />
      <tacticalCombat enabled="true" />
    </combat>

    <!-- Ecosystem Simulation -->
    <ecosystem>
      <animalCommunication enabled="true" />
    </ecosystem>

    <!-- Nation Management -->
    <nation>
      <powerMechanics enabled="true" />
      <multiFactionWar enabled="true" />
      <logistics enabled="true" />
      <agriculture enabled="true" />
      <commerce enabled="true" />
      <succession enabled="true" />
    </nation>

    <!-- Social Infrastructure -->
    <social>
      <bountySystem enabled="true" />
      <hierarchies enabled="true" />
      <loyaltyMechanics enabled="true" />
      <moralitySystem enabled="true" />
      <jurisdictionBasedJustice enabled="true" />
      <territoryExpansion enabled="true" />
    </social>

    <!-- Construction System -->
    <construction>
      <structureManipulation enabled="true" />
      <villageCreation enabled="true" />
    </construction>

    <!-- Interaction and Hiring -->
    <interaction>
      <prisonerManagement enabled="true" />
      <hireNPCs enabled="true" />
      <armyRecruitment enabled="true" />
    </interaction>

    <!-- Resource Management -->
    <resources>
      <renewableResources enabled="true" />
      <nonRenewableResources enabled="true" />
    </resources>

    <!-- Crafting System -->
    <crafting>
      <metallurgySystem enabled="true" />
      <advancedCrafting enabled="true" />
    </crafting>

    <!-- Survival Mechanics -->
    <survival>
      <oxygen enabled="true" />
      <temperature enabled="true" />
      <disease enabled="true" />
      <hunger enabled="true" />
      <energy enabled="true" />
      <sanity enabled="true" />
      <hygiene enabled="true" />
      <wasteManagement enabled="true" />
    </survival>

    <!-- Character Development -->
    <character>
      <growthSystem enabled="true" />
      <learningSystem enabled="true" />
      <teachingSystem enabled="true" />
      <observationSystem enabled="true" />
      <characterCustomization enabled="true" />
      <reproductionSystem enabled="true" />
    </character>

    <!-- Genetic Manipulation -->
    <genetics enabled="true" />
  </game>

</configuration>
